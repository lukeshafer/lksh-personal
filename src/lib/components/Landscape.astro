---
import InteractiveSun from "@c/InteractiveSun.astro";
import Hills from "./Hills.astro";
---

<div class="container">
	<div class="sun-container">
		<h1 class="title">Luke Shafer</h1>
		<InteractiveSun>
			<div class="sun"></div>
		</InteractiveSun>
	</div>
	<Hills />
</div>

<style>
	:root {
		--sun-color-light: var(--yellow-8);
		--sky-color-light: var(--brown-0);
		--shadow-color-light: rgba(0, 0, 0, 0.3);

		--sun-color-dark: var(--red-9);
		--sky-color-dark: var(--gradient-23);
		--shadow-color-dark: rgba(255, 255, 255, 0.3);

		--sun-color: var(--sun-color-light);
		--hills-stroke: var(--hills-stroke-light);
		--sky-color: var(--sky-color-light);
		--sky-color-inverse: var(--sky-color-dark);
		--shadow-color: var(--shadow-color-light);
		--shadow-color-inverse: var(--shadow-color-dark);

		--landscape-shadow: 2px 2px 5px var(--shadow-color);
		--landscape-shadow-inverse: 2px 2px 5px var(--shadow-color-inverse);

		& body.dark {
			--sun-color: var(--sun-color-dark);
			--sky-color: var(--sky-color-dark);
			--sky-color-inverse: var(--sky-color-light);
			--shadow-color: var(--shadow-color-dark);
			--shadow-color-inverse: var(--shadow-color-light);
		}
	}

	.container {
		position: absolute;
		inset: 0;
		overflow: hidden;
		width: 100%;
		height: 100vh;
		transition: background 0.5s ease;

		background: var(--sky-color);

		/* ANIMATIONS */
		--hide-before-animation: var(--animation-fade-in) 0s forwards;

		opacity: 0;
		animation: var(--animation-fade-in) forwards;
		animation-duration: 1s;
		animation-delay: 0;

		& .sun-container {
			opacity: 0;
			animation: rise 2s var(--ease-in-out-3) forwards,
				var(--hide-before-animation), temp-overflow-hidden 4s forwards;
			animation-delay: 0s, 0s, 1.5s;
		}

		& .title {
			opacity: 0;
			animation: var(--animation-slide-in-left) forwards,
				var(--animation-fade-in-bloom) forwards;
			animation-duration: 1s;
			animation-timing-function: var(--ease-out-3);
			animation-delay: 2s;
		}
	}

	@keyframes temp-overflow-hidden {
		0% {
			overflow: hidden;
		}
		100% {
			overflow: visible;
		}
	}

	@keyframes rise {
		0% {
			translate: -50vw 100vh;
		}
		100% {
			translate: 0 0;
		}
	}

	.sun-container {
		position: absolute;
		top: 10%;
		right: 10%;
		min-width: 100px;
		min-height: 100px;
		border-radius: 9999px;
		animation: var(--sun-animation);
		gap: 3rem;
		overflow: hidden;

		display: flex;
		align-items: center;

		& .sun {
		}

		& .title {
			z-index: -1 !important;
			right: 120%;
			width: max-content;
			white-space: nowrap;

			color: var(--pink-11);

			font-family: Nunito, cursive;
			font-weight: 700;
		}
	}

	.gradient-text {
		z-index: -1 !important;
		--gradient-text-light: var(--gradient-1);
		--gradient-text-dark: var(--gradient-25);

		--gradient-text: var(--gradient-text-light);
		@media (prefers-color-scheme: dark) {
			--gradient-text: var(--gradient-text-dark);
		}

		background: var(--gradient-text);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
</style>
